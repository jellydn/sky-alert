{
	"name": "sky-alert",
	"version": "0.1.0",
	"description": "Real-time flight monitoring Telegram bot",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "bun run src/index.ts",
		"db:generate": "./node_modules/.bin/drizzle-kit generate",
		"db:migrate": "./node_modules/.bin/drizzle-kit migrate",
		"db:studio": "./node_modules/.bin/drizzle-kit studio",
		"typecheck": "tsc --noEmit",
		"lint": "biome check src/",
		"test": "bun test"
	},
	"keywords": [
		"telegram",
		"bot",
		"flights",
		"tracking"
	],
	"license": "MIT",
	"dependencies": {
		"grammy": "^1.34.2",
		"drizzle-orm": "^0.45.0",
		"dotenv": "^17.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.2",
		"@types/bun": "^1.3.9",
		"@types/node": "^25.0.0",
		"better-sqlite3": "^12.6.2",
		"drizzle-kit": "^0.31.0",
		"typescript": "^5.7.3"
	}
}
